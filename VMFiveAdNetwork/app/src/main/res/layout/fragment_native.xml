<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_native_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/native_listview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="ListView Demo" />

    <Button
        android:id="@+id/native_listview_with_banner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="ListView Demo With Banner" />

    <Button
        android:id="@+id/native_recyclerview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="RecyclerView Demo" />

</LinearLayout>